{
  "name": "svg-text-fit",
  "version": "1.0.1",
  "description": "SVG utility for fitting text inside a box by resizing or ellipsis",
  "main": "dist/svg-text-fit",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c --banner \"$(preamble)\"",
    "watch": "rollup -c -w",
    "minify": "uglifyjs dist/svg-text-fit.js -o dist/svg-text-fit.min.js -c -m --preamble \"$(preamble)\"",
    "prepublish": "npm run build && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/svg-text-fit.git"
  },
  "keywords": [
    "svg",
    "text",
    "fit",
    "ellipsis",
    "utils"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/svg-text-fit/issues"
  },
  "homepage": "https://github.com/vasturiano/svg-text-fit#readme",
  "dependencies": {
    "kapsule": "^1.3.0"
  },
  "devDependencies": {
    "package-preamble": "~0.1.0",
    "rollup": "~0.47.4",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-watch": "^4.3",
    "uglify-js-es6": "^2.8.9"
  }
}
