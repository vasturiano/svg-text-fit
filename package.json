{
  "name": "svg-text-fit",
  "version": "1.1.5",
  "description": "SVG utility for fitting text inside a box by resizing or ellipsis",
  "unpkg": "dist/svg-text-fit.min.js",
  "main": "dist/svg-text-fit.common.js",
  "module": "dist/svg-text-fit.module.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c",
    "dev": "rollup -c -w",
    "minify": "terser dist/svg-text-fit.js -o dist/svg-text-fit.min.js -c -m --comments '/Version/'",
    "build-module": "rollup -c rollup.config.module.js",
    "prepare": "npm run build && npm run minify && npm run build-module"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/svg-text-fit.git"
  },
  "keywords": [
    "svg",
    "text",
    "fit",
    "ellipsis",
    "utils"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/svg-text-fit/issues"
  },
  "homepage": "https://github.com/vasturiano/svg-text-fit#readme",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "kapsule": "^1.12.2"
  },
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.0.6",
    "rollup-plugin-babel": "^4.4.0",
    "terser": "^4.6.6"
  }
}
