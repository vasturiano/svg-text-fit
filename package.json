{
  "name": "svg-text-fit",
  "version": "1.0.2",
  "description": "SVG utility for fitting text inside a box by resizing or ellipsis",
  "main": "dist/svg-text-fit",
  "jsnext:main": "src/index.js",
  "scripts": {
    "build": "webpack",
    "watch": "webpack --progress --colors --watch",
    "minify": "uglifyjs dist/svg-text-fit.js -o dist/svg-text-fit.min.js -c -m",
    "prepublish": "npm run build && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/svg-text-fit.git"
  },
  "keywords": [
    "svg",
    "text",
    "fit",
    "ellipsis",
    "utils"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/svg-text-fit/issues"
  },
  "homepage": "https://github.com/vasturiano/svg-text-fit#readme",
  "dependencies": {
    "kapsule": "^1.5.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "uglify-js": "^3.1.0",
    "webpack": "^3.5.6"
  }
}
