{
  "name": "svg-text-fit",
  "version": "1.1.5",
  "description": "SVG utility for fitting text inside a box by resizing or ellipsis",
  "unpkg": "dist/svg-text-fit.min.js",
  "main": "dist/svg-text-fit.common.js",
  "module": "dist/svg-text-fit.module.js",
  "scripts": {
    "build": "rm -rf dist && mkdir dist && rollup -c",
    "watch": "rollup -c -w",
    "minify": "uglifyjs dist/svg-text-fit.js -o dist/svg-text-fit.min.js -c -m --comments '/Version/'",
    "build-module": "rollup -c rollup.config.module.js",
    "prepublish": "npm run build && npm run minify && npm run build-module"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vasturiano/svg-text-fit.git"
  },
  "keywords": [
    "svg",
    "text",
    "fit",
    "ellipsis",
    "utils"
  ],
  "author": {
    "name": "Vasco Asturiano",
    "url": "http://bl.ocks.org/vasturiano"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vasturiano/svg-text-fit/issues"
  },
  "homepage": "https://github.com/vasturiano/svg-text-fit#readme",
  "dependencies": {
    "kapsule": "^1.7.8"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-commonjs": "^8.2.1",
    "rollup-plugin-node-resolve": "^3.0",
    "rollup-watch": "^4.3.1",
    "uglify-js": "^3.0.28"
  }
}
